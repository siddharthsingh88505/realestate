<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate Project</title>
    <!-- bootstrap css -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- font-awesome icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- custom css -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- header section -->
    <header class="container-fluid header-section">
        <!-- top header -->
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <!-- left content -->
                    <div class="col-lg-6 header-top-left">
                        <div class="top-info">
                            <i class="fa fa-phone"></i>
                            (+91) 7767824255
                        </div>
                        <div class="top-info">
                            <i class="fa fa-envelope"></i>
                            siddharthsingh88505@gmail.com
                        </div>
                    </div>
                    <!-- right content -->
                    <div class="col-lg-6 text-lg-right header-top-right">
                        <div class="top-social">
                            <a href=""><i class="fa-brands fa-facebook-f"></i></a>
                            <a href=""><i class="fa-brands fa-twitter"></i></a>
                            <a href=""><i class="fa-brands fa-instagram"></i></a>
                            <a href=""><i class="fa-brands fa-pinterest"></i></a>
                            <a href=""><i class="fa-brands fa-linkedin"></i></a>
                        </div>
                        <% if(verified) { %>
                            <% if(userType==="Agent" && !isAdmin ) { %>
                                <div class="user-panel">
                                    <a href="/logout"><i class="fa fa-sign-in"></i> &nbsp;Logout</a>
                                </div>
                                <% } else if(isAdmin) { %>
                                    <% if(verified) { %>
                                        <div class="user-panel">
                                            <a href="/logout"><i class="fa fa-sign-in"></i> &nbsp;Logout</a>
                                        </div>
                                        <% } else { %>
                                            <div class="user-panel">
                                                <a href="/login"><i class="fa fa-sign-in"></i> &nbsp;Login</a>
                                            </div>
                                            <% } %>
                                                <% } else { %>
                                                    <div class="user-panel">
                                                        <a href="/register-as-agent"><i class="fa fa-sign-in"></i>
                                                            &nbsp;Register as
                                                            Agent</a>
                                                        <a href="/logout"><i class="fa fa-sign-in"></i> &nbsp;Logout</a>
                                                    </div>
                                                    <% } %>
                                                        <% } else { %>
                                                            <div class="user-panel">
                                                                <a href="/register"><i
                                                                        class="fa-regular fa-user"></i>&nbsp;Register</a>
                                                                <a href="/login"><i class="fa fa-sign-in"></i>
                                                                    &nbsp;Login</a>
                                                            </div>
                                                            <% } %>

                    </div>
                </div>
            </div>
        </div>
        <!-- main header -->
        <div class="container">
            <div class="main-header row">
                <div class="col-12">
                    <div class="site-navbar">
                        <a href="/" class="site-logo">REAL<span class="estate">ESTATE</span></a>
                        <!-- hamburger menu -->
                        <div class="nav-switch">
                            <i class="fa fa-bars"></i>
                        </div>
                        <!-- main menu -->
                        <ul class="main-menu">
                            <li><a href="/">HOME</a></li>
                            <% if(verified && (userType==="Agent" ) && !isAdmin) { %>
                                <li><a href="/upload-property">UPLOAD PROPERTY</a></li>
                                <% } %>
                                    <% if(verified && isAdmin) { %>
                                        <li><a href="/admin/dashboard">DASHBOARD</a></li>
                                        <% } %>
                                            <li><a href="/featured">FEATURED LISTING</a></li>
                                            <li><a href="/about">ABOUT US</a></li>
                                            <li><a href="/contact">CONTACT</a></li>
                                            <% if(verified && !isAdmin) {%>
                                                <li><a href="/chat">Chat</a></li>
                                                <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="togglebars container">
            <ul class="toggle-menu">
                <li><a href="/">HOME</a></li>
                <% if(verified && (userType==="Agent" ) && !isAdmin) { %>
                    <li><a href="/upload-property">UPLOAD PROPERTY</a></li>
                    <% } %>
                        <% if(verified && isAdmin) { %>
                            <li><a href="/admin/dashboard">DASHBOARD</a></li>
                            <% } %>
                                <li><a href="/featured">FEATURED LISTING</a></li>
                                <li><a href="/about">ABOUT US</a></li>
                                <li><a href="/contact">CONTACT</a></li>
                                <% if(verified && !isAdmin) {%>
                                    <li><a href="/chat">Chat</a></li>
                                    <% } %>
            </ul>
        </div>
    </header>

    <!-- hero section -->
    <div class="container-fluid hero-section">
        <div class="container hero-container">
            <div class="hero-content">
                <h2>Find your place with our local life style</h2>
                <p class="subtext">
                    <br>Find property info from the most comprehensive source data.
                </p>
                <a href="/search" class="site-btn">SEARCH PROPERTIES</a>
                <a href="#recent" class="site-btn">VIEW MORE</a>
            </div>
        </div>
    </div>
    <!-- properties section -->
    <section class="properties-section spad set-bg" id="recent">
        <div class="container">
            <div class="section-title text-center">
                <h3>RECENT PROPERTIES</h3>
                <p>Discover the recent properties added for you</p>
                <div class="row property-list">
                    <% recent.forEach((doc)=> { %>
                        <div class="col-md-6">
                            <div class="property-item"
                                style="background-image: url('/images/<%= doc.images[0].id %>');">
                                <div class="sale-notic">FOR <%= doc.notic %>
                                </div>
                                <div class="property-info text-white">
                                    <div class="info-warp">
                                        <h5 class="text-left">
                                            <%= doc.name %>
                                        </h5>
                                        <p><i class="fa-solid fa-location-dot"></i>
                                            <%= doc.location %>
                                        </p>
                                    </div>
                                    <div class="more-detail"><a
                                            href="/single-list?id=<%= doc._id %>&ref_id=<%= doc.ref_id %>"
                                            class="more-detail-link text-center">More
                                            Details</a></div>
                                </div>
                            </div>
                        </div>
                        <% }) %>

                </div>
            </div>
        </div>
    </section>

    <!-- services section -->
    <section class="services-section spad set-bg">
        <div class="container">
            <div class="row">
                <!-- service dummy image -->
                <div class="col-lg-6">
                    <img src="img/service.jpg" alt="service-img" class="service-img">
                </div>
                <!-- services list -->
                <div class="col-lg-5 offset-lg-1 pl-lg-0">
                    <div class="service-title">
                        <h3>OUR SERVICES</h3>
                        <p>We provide the perfect service for </p>
                    </div>
                    <div class="services">
                        <div class="service-item">
                            <i class="fa fa-comments"></i>
                            <div class="service-text">
                                <h5>Consultant Service</h5>
                                <p>We helps you to find the best environment for your living.</p>
                            </div>
                        </div>
                        <div class="service-item">
                            <i class="fa fa-home"></i>
                            <div class="service-text">
                                <h5>Properties Management</h5>
                                <p>We look after the buildings,housing,industrial spaces and other property to
                                    make sure
                                    it is in good working
                                    order,
                                    looks clean and well-maintained and everything is in working order.</p>
                            </div>
                        </div>
                        <div class="service-item">
                            <i class="fa fa-briefcase"></i>
                            <div class="service-text">
                                <h5>Renting and Selling</h5>
                                <p>Here you can find the different types of property for renting and selling as
                                    well.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- featured listing section -->
    <section class="feature-section spad">
        <div class="container">
            <div class="section-title text-center">
                <h3>Featured Listings</h3>
                <p>Browse houses and flats for sale and rent area</p>
            </div>
            <!-- row for cards (featured properties) -->
            <div class="row">
                <% featured.forEach((doc)=> { %>
                    <div class="col-lg-4 col-md-6">
                        <div class="feature-item">
                            <div class="feature-pic set-bg"
                                style="background-image: url('/images/<%= doc.images[0].id %>');">
                                <div class="sale-notic">FOR <%= doc.notic %>
                                </div>
                            </div>
                            <div class="feature-text">
                                <div class="text-center feature-title">
                                    <h5>
                                        <%= doc.name %>
                                    </h5>
                                    <p><i class="fa fa-map-marker"></i>
                                        <%= doc.location %>
                                    </p>
                                </div>
                                <div class="room-info-warp">
                                    <div class="room-info">
                                        <div class="rf-left">
                                            <p><i class="fa fa-th-large"></i>
                                                <%= doc.area %> sq feet
                                            </p>
                                            <p><i class="fa fa-bed"></i>
                                                <%= doc.bedroom %> Bedroom
                                            </p>
                                        </div>
                                        <div class="rf-right">
                                            <p><i class="fa-solid fa-hotel"></i>
                                                <%= doc.type %>
                                            </p>
                                            <p><i class="fa fa-bath"></i>
                                                <%= doc.bathroom %> Bathroom
                                            </p>
                                        </div>
                                    </div>
                                    <div class="room-info">
                                        <div class="rf-left">
                                            <p><i class="fa fa-user"></i>
                                                <%= doc.owner %>
                                            </p>
                                        </div>
                                        <div class="rf-right">
                                            <% if((Date.now() - doc.date.getTime()) / (1000 * 3600 * 24) < 1) { %>
                                                <p><i class="fa-solid fa-clock-rotate-left"></i>
                                                    <% if(Math.trunc((Date.now() - doc.date.getTime()) / (1000 * 3600))<
                                                        1) { %>
                                                        <%= Math.trunc((Date.now() - doc.date.getTime()) / (1000 * 60))
                                                            %> minutes ago
                                                            <% } else if(Math.trunc((Date.now() - doc.date.getTime()) /
                                                                (1000 * 3600))===1) { %>
                                                                <%= Math.trunc((Date.now() - doc.date.getTime()) / (1000
                                                                    * 3600)) %> hour ago
                                                                    <% } else { %>
                                                                        <%= Math.trunc((Date.now() - doc.date.getTime())
                                                                            / (1000 * 3600)) %>
                                                                            hours ago
                                                                            <% } %>
                                                </p>
                                                <% } else { %>
                                                    <p><i class="fa-solid fa-clock-rotate-left"></i>
                                                        <% if(Math.trunc((Date.now() - doc.date.getTime()) / (1000 *
                                                            3600 * 24))===1 ) { %>
                                                            1 day ago
                                                            <% } else { %>
                                                                <%= Math.trunc((Date.now() - doc.date.getTime()) / (1000
                                                                    * 3600 * 24)) %> days ago
                                                                    <% } %>
                                                    </p>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                                <a href="/single-list?id=<%= doc._id %>&ref_id=<%= doc.ref_id %>"
                                    class="room-price">More Details</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>

    <!-- featured category section -->
    <section class="feature-category-section spad">
        <div class="container">
            <div class="section-title text-center">
                <h3>Popular Places</h3>
                <p>We understand the value and importance of places</p>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 f-allign">
                    <a href="/category/apartment">
                        <img src="img/1.jpg" alt="">
                        <h5>Apartment</h5>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 f-allign">
                    <a href="/category/family">
                        <img src="img/2.jpg" alt="">
                        <h5>Family Home</h5>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 f-allign">
                    <a href="/category/resort">
                        <img src="img/3.jpg" alt="">
                        <h5>Resort Villas</h5>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 f-allign">
                    <a href="/category/office">
                        <img src="img/4.jpg" alt="">
                        <h5>Office Building</h5>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- footer section -->
    <footer class="container-fluid footer-section">
        <div class="hidden-element" hidden>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 footer-widget">
                    <a href="/" class="site-logo">REAL<span class="estate">ESTATE</span></a>
                    <p>This project is developed to buy and rent the property as well as know the rates of
                        different
                        property. </p>
                    <div class="social">
                        <a href=""><i class="fa-brands fa-facebook-f"></i></a>
                        <a href=""><i class="fa-brands fa-twitter"></i></a>
                        <a href=""><i class="fa-brands fa-instagram"></i></a>
                        <a href=""><i class="fa-brands fa-pinterest"></i></a>
                        <a href=""><i class="fa-brands fa-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 footer-widget">
                    <div class="contact-widget">
                        <h5 class="fw-title">CONTACT US</h5>
                        <p><i class="fa fa-map-marker"></i>401-209 Nallasopara,Maharashtra. </p>
                        <p><i class="fa fa-phone"></i>(+91) 7767824255</p>
                        <p><i class="fa fa-envelope"></i>siddharthsingh88505@gmail.com</p>
                        <p><i class="fa fa-clock-o"></i>Mon - Sat, 10:00 AM - 06:00 PM</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 footer-widget">
                    <div class="double-menu-widget">
                        <h5 class="fw-title">POPULAR PLACES</h5>
                        <ul>
                            <li><a href="">Florida</a></li>
                            <li><a href="">New York</a></li>
                            <li><a href="">Washington</a></li>
                            <li><a href="">Los Angeles</a></li>
                            <li><a href="">Chicago</a></li>
                        </ul>
                        <ul>
                            <li><a href="">St Louis</a></li>
                            <li><a href="">Jacksonville</a></li>
                            <li><a href="">San Jose</a></li>
                            <li><a href="">San Diego</a></li>
                            <li><a href="">Houston</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="footer-nav">
                    <!-- footer nav links -->
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/featured">Featured Listing</a></li>
                        <li><a href="/about">About us</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Custom JavaScript -->
    <script src="/js/index.js"></script>
</body>

</html>