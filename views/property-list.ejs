<table class="table table-stripped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Area(Sq. Ft.)</th>
            <th scope="col">Price</th>
            <th scope="col">Date Added</th>
            <th scope="col" class="text-center">Remove</th>
        </tr>
    </thead>
    <tbody>
        <% if(properties.length===0){ %>
            <tr>
                <td scope="row">No properties found</td>
            </tr>
    </tbody>
    <% } else { %>
        <% for(let i=0; i< properties.length ;i++) { %>
            <tr>
                <td scope="row">
                    <%=i+1 %>
                </td>
                <td scope="row">
                    <%=properties[i].name %>
                </td>
                <td scope="row">
                    <%=properties[i].location %>
                </td>
                <td scope="row">
                    <%=properties[i].area %>
                </td>
                <td scope="row">
                    <%=properties[i].price %>
                </td>
                <td scope="row">
                    <%=properties[i].date.getDate() %>-<%=properties[i].date.getMonth()+1 %>-
                            <%=properties[i].date.getFullYear() %>
                </td>
                <td scope="row" class="text-center"><a href="/delete-property/<%= properties[i].id %>"
                        class="remove-btn"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
            <% } %>

                </tbody>
                <% } %>


</table>